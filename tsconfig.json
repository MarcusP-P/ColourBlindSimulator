{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outFile": "dist/index.js",
    "sourceMap": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "noEmit": true,
    // Search under node_modules for non-relative imports.
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}